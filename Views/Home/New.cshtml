@model Wedding

@{
    ViewData["Title"] = "Wedding Planner";
}

<h1>Plan Your Wedding, @ViewBag.username</h1>
<p class="text-right">
    <a href="/dashboard/@ViewBag.userId" class="link">DashBoard</a> | <a href="/logout" class="link">Logout</a>
</p>
<hr>
<form action="/addWedding/@ViewBag.userId" method="post">
    <div class="form-group">
        <label asp-for="Bride"></label>
        <input asp-for="Bride" class="form-control" placeholder="Bride name">
        <span asp-validation-for="Bride"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bridegroom"></label>
        <input asp-for="Bridegroom" class="form-control" placeholder="Bridegroom name">
        <span asp-validation-for="Bridegroom"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
        <span asp-validation-for="Date"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeddingAddress"></label>
        <input asp-for="WeddingAddress" class="form-control" placeholder="Wedding Address">
        <span asp-validation-for="WeddingAddress"></span>
    </div>

    <div class="form-group">
        <input class="btn btn-primary text-right" type="submit" value="Create">  
    </div>
</form>
